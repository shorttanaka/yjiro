<div class="row">
  <div class="col-sm-8 col-sm-offset-2">
    <h2>ユーザー新規登録</h2>

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= devise_error_messages! %>

      <div class="form-group">
        <%= f.label :family_name, "ニックネーム" %><br />
        <%= f.text_field :nick_name, autofocus: true, class: "form-control" %>
      </div>

      <div class="form-group">
        <%= f.label :given_name, "年齢" %><br />
        <%= f.text_field :age, class: "form-control" %>
      </div>

      <div class="form-group">
        <%= f.label :sex, "性別" %><br />
        <%= f.select :sex, User.sexes.keys, {}, class: "form-control" %>
      </div>

      <div class="form-group">
        <%= f.label :email, "メールアドレス" %><br />
        <%= f.email_field :email, class: "form-control" %>
      </div>

      <div class="form-group">
        <%= f.label :password, "パスワード" %>
        <% if @minimum_password_length %>
        <em>(<%= @minimum_password_length %> 文字以上が必要です)</em>
        <% end %><br />
        <%= f.password_field :password, autocomplete: "off", class: "form-control" %>
      </div>

      <div class="form-group">
        <%= f.label :password_confirmation, "パスワード再入力" %><br />
        <%= f.password_field :password_confirmation, autocomplete: "off", class: "form-control" %>
      </div>

      <div class="form-group">
        <%= f.submit "新規登録", class: "btn btn-default" %>
      </div>
    <% end %>

    <%= render "devise/shared/links" %>
  </div>
</div>
